# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/academy-app
# For MongoDB Atlas (production), use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/academy-app?retryWrites=true&w=majority

# JWT Secret Key for Authentication (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-256-bits-long

# Next.js Environment
NEXTAUTH_URL=http://localhost:3000
# For production, set to your domain:
# NEXTAUTH_URL=https://yourdomain.com

NEXTAUTH_SECRET=your-nextauth-secret-key-change-this-in-production

# Application Environment
NODE_ENV=development
# For production, set to:
# NODE_ENV=production

# Optional: Email Configuration (for notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Optional: File Upload Configuration
# MAX_FILE_SIZE=5242880
# UPLOAD_DIR=./public/uploads
